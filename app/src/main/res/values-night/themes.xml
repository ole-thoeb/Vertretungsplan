<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorOnBackground">@color/white</item>

        <item name="colorPrimary">@color/navyBlue500</item>
        <item name="colorPrimaryDark">@color/navyBlue600</item>
        <item name="colorPrimaryVariant">@color/navyBlue400</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/yellow400</item>
        <item name="colorSecondaryVariant">@color/yellow300</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorConfirm">@color/brightGreen</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="statusBarColor">?colorSurface</item>
        <item name="toolbarColor">?colorSurface</item>
        <item name="android:statusBarColor">?attr/statusBarColor</item>

        <item name="toolbarIconColor">@color/white</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonDefault</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/AppToolbar</item>

        <item name="alertDialogTheme">@style/DialogStyleDark</item>
        <item name="materialAlertDialogTheme">@style/DialogStyleDark</item>

        <item name="internalCardBackgroundColor">@color/lighterGray</item>
        <item name="materialCardViewStyle">@style/CardStyle</item>
    </style>
</resources>