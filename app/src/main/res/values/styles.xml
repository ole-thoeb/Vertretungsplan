    <style name="SubjectTV" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DayTimetableTV" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CAB" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/CABTitleStyle</item>
        <item name="background">?colorSecondaryVariant</item>
    </style>

    <style name="CABTitleStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="ActionBarStyleLight" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="background">?android:colorPrimary</item>
    </style>

    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkAppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/CAB</item>
        <item name="actionBarSize">56dp</item>
        <item name="actionBarStyle">@style/ActionBarStyleDark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="backgroundColor">@color/black</item>
<!--        <item name="highlightSelect">@color/highlightSelectDark</item>-->
<!--        <item name="internalCardBackgroundColor">@color/black</item>-->
<!--        <item name="textHighlightColor">@color/white</item>-->
<!--        <item name="cardBoarder">@drawable/card_boarder</item>-->
    </style>

    <style name="DarkAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarStyleDark" parent="Base.Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="background">?android:colorPrimary</item>
    </style>

    <!-- OverflowButtons Styles -->

    <style name="OverflowButtonDefault" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/toolbarIconColor</item>
    </style>

<!--    <style name="OverflowButtonColor" parent="Widget.AppCompat.ActionButton.Overflow">-->
<!--        <item name="android:tint">?colorOnPrimary</item>-->
<!--    </style>-->

    <!--Toolbar Styles-->

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">?toolbarColor</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarColored" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <!-- Tab Styles -->

    <style name="TabColored" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">?colorSecondary</item>
    </style>

    <!--Dialog Styles-->

    <style name="DialogStyleLight" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/PosDialogButton</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="DialogStyleDark" parent="@style/Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/PosDialogButton</item>
        <item name="colorSecondary">@color/yellow600</item>
    </style>

    <style name="BaseDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="NegDialogButton" parent="BaseDialogButton">
        <item name="android:textColor">?attr/colorError</item>
        <item name="rippleColor">?attr/colorError</item>
    </style>

    <style name="PosDialogButton" parent="BaseDialogButton">
        <item name="android:textColor">?attr/colorConfirm</item>
        <item name="rippleColor">?attr/colorConfirm</item>
    </style>

    <!-- Card styles -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?internalCardBackgroundColor</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- TextInputStyles -->

    <style name="TextInputLayout.OutlinedBox.SecondaryVariant" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorSecondaryVariant</item>
        <item name="hintTextColor">?colorSecondaryVariant</item>
    </style>

    <style name="ThemeOverlay.TextCursor"/>

    <style name="ThemeOverlay.TextCursor.SecondaryVariant">
        <item name="android:textCursorDrawable">@drawable/text_courser_secondary_variant</item>
        <item name="android:colorControlActivated">?colorSecondaryVariant</item>
    </style>


</resources>
